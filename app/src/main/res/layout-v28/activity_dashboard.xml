<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_back"
                        android:textStyle="bold"
                        android:layout_marginTop="15sp"
                        android:layout_marginStart="20sp"
                        android:textColor="@color/yellow"
                        android:textSize="35sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="5sp"
                        android:text="Alex Apellido"
                        />
                </LinearLayout>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pfp"
                    android:layout_gravity="end"
                    />
            </LinearLayout>

            <ImageButton
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="182sp"
                android:text="Lesson 2"
                android:textColor="@color/black"
                android:backgroundTint="@color/light_yellow"
                android:scaleType="fitXY"
                android:textColorHighlight="@color/light_yellow"
                android:layout_marginHorizontal="20sp"
                android:src="@drawable/continue_button"
                android:outlineAmbientShadowColor="@color/yellow"
                android:elevation="10sp"
                android:textAlignment="textStart"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:text="@string/games"
                android:textColor="@color/dark_green"
                android:textSize="32sp"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="175sp"
                android:paddingHorizontal="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15sp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10sp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/game1"
                        android:layout_width="170sp"
                        android:layout_height="170sp"
                        tools:background="@color/black"
                        android:elevation="10sp"
                        app:shapeAppearanceOverlay="@style/ImageView.Corner"
                        android:src="@drawable/game_placeholder"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/game2"
                        android:layout_width="170sp"
                        android:layout_height="170sp"
                        android:layout_marginStart="20sp"
                        tools:background="@color/black"
                        android:elevation="10sp"
                        app:shapeAppearanceOverlay="@style/ImageView.Corner"
                        android:src="@drawable/game_placeholder"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/game3"
                        android:layout_width="170sp"
                        android:layout_height="170sp"
                        android:layout_marginStart="20sp"
                        tools:background="@color/black"
                        android:elevation="10sp"
                        app:shapeAppearanceOverlay="@style/ImageView.Corner"
                        android:src="@drawable/game_placeholder"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/game4"
                        android:layout_width="170sp"
                        android:layout_height="170sp"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="40sp"
                        tools:background="@color/black"
                        android:elevation="10sp"
                        app:shapeAppearanceOverlay="@style/ImageView.Corner"
                        android:src="@drawable/game_placeholder"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:text="@string/explore"
                android:textColor="@color/dark_green"
                android:textSize="32sp"/>

            <Button
                android:id="@+id/incomeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/dashboard_button_background"
                android:text="Income"/>
            <Button
                android:id="@+id/spendingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/dashboard_button_background"
                android:text="Spending"/>
            <Button
                android:id="@+id/savingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/dashboard_button_background"
                android:layout_marginHorizontal="20sp"
                android:text="Saving"/>
            <Button
                android:id="@+id/creditButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/dashboard_button_background"
                android:layout_marginHorizontal="20sp"
                android:text="Credit"/>
            <Button
                android:id="@+id/govAssistanceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/dashboard_button_background"
                android:layout_marginHorizontal="20sp"
                android:layout_marginBottom="25sp"
                android:text="Government Help"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>