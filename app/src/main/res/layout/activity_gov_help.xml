<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GovHelpActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.089"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Government Assistance"
            android:textSize="50sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/GovAssistance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="What is Government Assistance? Government assistance is when the government helps its citizens like you to get .you what you need. Examples of this are medical care, financial assistance, food stamps, and many other benefits that you government offers."
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/unemployed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:textStyle="bold"
            android:text="Unemployment:"
            android:textSize="16sp"
            android:paddingTop="10sp"
            android:paddingBottom="8sp"
            android:paddingLeft="10sp"
            app:layout_constraintTop_toBottomOf="@id/GovAssistance"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/def."
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:paddingLeft="19sp"
            android:text="What is unemployment? Unemployment is when people who do not have jobs,and are looking for a new job in the meanwhile being available to do such job."
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/unemployed"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/foodStamps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_margin="0sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingLeft="10sp"
            android:text="Food Stamps: "
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/def."
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/foodDef."
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:paddingLeft="20sp"
            android:text="What are Food Stamps?The Supplemental Nutrition Assistance Program (SNAP), SNAP is an extra program to help an individual or family in buying nutritious food."
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/foodStamps"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/insurance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_margin="0sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingLeft="10sp"
            android:text= "Insurance:"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/foodDef."
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/insuranceDef."
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0sp"
            android:paddingLeft="20sp"
            android:text="What is insurance?A means of guaranteeing protection or safety, through your finacies."
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/insurance"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="0sp"
            android:layout_height="160sp"
            android:src="@drawable/gov"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/insuranceDef."/>

        <Button
            android:id="@+id/mybutton"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="@string/finish"
            android:background="@color/light_yellow"
            android:textColor="@color/dark_green"
            android:elevation="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>